{
    "manifest_version": 3,
    "name": "FeedbackPro Scraper",
    "version": "2.0",
    "description": "Cào comment Shopee/Facebook và gửi về FeedbackPro",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "*://*.shopee.vn/*",
        "*://*.facebook.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}